{
  "name": "jalaali-jira-worklog",
  "version": "2.2.0",
  "description": "Jira worklog checker with Jalaali calendar",
  "license": "ISC",
  "author": "SkyBlueDev (Mohammad Mahdi Zarei)",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build:mac:iconutil": "iconutil -c icns build/icon.iconset -o build/icon.icns",
    "dist": "npm run dist:win && npm run dist:mac",
    "dist:win": "electron-builder --win nsis",
    "dist:mac": "npm run build:mac:iconutil && electron-builder --mac dmg",
    "dist:portable": "electron-builder --win portable"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "jszip": "^3.10.1",
    "electron-store": "^10.1.0",
    "keytar": "^7.9.0",
    "moment": "^2.30.1",
    "moment-jalaali": "^0.10.4",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.skybluedev.jalaalijiraworklogs",
    "productName": "Jalaali Jira Worklogs",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "portable", "arch": ["x64"] }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JalaaliJiraWorklogs",
      "runAfterFinish": true
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"]
    },
    "dmg": {
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    }
  }
}
